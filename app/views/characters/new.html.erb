
<div class="container p-5">
  <div class="row">
    <div class="col-6 mx-auto">
        <h1 class="mb-5">Ajoutez votre combattant favori !</h1>
          <%= simple_form_for(@character) do |f| %>
                  <% if @character.errors.any? %>
                    <ul>
                      <% @character.errors.full_messages.each do |message| %>
                        <li class="error"><%= message %></li>
                      <% end %>
                    </ul>
                  <% end %>
              <%= f.input :name , label: "Name"  %>
              <%= f.input :life , label: "Life capacity of the character"  %>
              <%= f.input :attack , label: "Attack capacity of the character"  %>
              <%= f.input :speed , label: "Speed capacity of the character"  %>
              <%= f.input :photo, as: :file %>

              <br>
            <div class="text-center">
              <%= f.submit 'Enregistrez votre combattant' , :class => "btn btn-flat"  %>
            </div>
          <% end %>
    </div>
  </div>
  <div class=" d-flex justify-content-center">
     <%= link_to "Acceuil", root_path, class: 'btn btn-flat mt-2' %>
  </div>
</div>

